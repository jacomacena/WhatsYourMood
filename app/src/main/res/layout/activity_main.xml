<?xml version="1.0" encoding="utf-8" ?>

<LinearLayout

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#80000000">

    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView1"
        android:layout_gravity="center"
        />

    <HorizontalScrollView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_gravity="center">

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >



            <ImageView
                android:src="@drawable/agua"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView2"
                android:padding="15dp"
                />

            <ImageView
                android:src="@drawable/banheiro"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView3"
                android:layout_gravity="center"
                android:padding="15dp"/>

            <ImageView
                android:src="@drawable/brincar"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView4"
                android:layout_gravity="center"
                android:padding="15dp"/>

            <ImageView
                android:src="@drawable/calor"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView5"
                android:layout_gravity="center"
                android:padding="15dp"
                />

            <ImageView
                android:src="@drawable/comida"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView6"
                android:layout_gravity="center"
                android:padding="15dp"/>

            <ImageView
                android:src="@drawable/dormir"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView7"
                android:layout_gravity="center"
                android:padding="15dp"/>

            <ImageView
                android:src="@drawable/feliz"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView8"
                android:layout_gravity="center"
                android:padding="15dp"/>

            <ImageView
                android:src="@drawable/frio"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView9"
                android:layout_gravity="center"
                android:padding="15dp"/>

            <ImageView
                android:src="@drawable/lavarasmaos"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView10"
                android:layout_gravity="center"
                android:padding="15dp"/>

            <ImageView
                android:src="@drawable/triste"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView11"
                android:layout_gravity="center"
                android:padding="15dp"/>

            <ImageView
                android:src="@drawable/vertv"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView12"
                android:layout_gravity="center"
                android:padding="15dp"/>

            <ImageView
                android:src="@drawable/videogame"
                android:layout_width="125dp"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:id="@+id/imageView13"
                android:layout_gravity="center"
                android:padding="15dp"/>

        </LinearLayout>

    </HorizontalScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/whats"
        android:id="@+id/textView"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:textAlignment="center" />

</LinearLayout>